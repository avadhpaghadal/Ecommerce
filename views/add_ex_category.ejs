<%- include("header")%>


<main id="main" class="main">

    <div class="pagetitle">
      <h1>Add Extra_Category Data</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin/deshboard">Home</a></li>
          <li class="breadcrumb-item">Extra_Category</li>
          <li class="breadcrumb-item active">Add Extra_Category</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-10">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Extra_Category Form</h5>
              <!-- General Form Elements -->
              <form action="/admin/extra_category/add_extracatData" method="post">
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-4 col-form-label">Select Category</label>
                  <div class="col-sm-8">
                    <select name="extracat_name" id="categoryID" onchange="return getSubcatData()" class="form-control">
                        <option value="">Please select Category</option>
                        <% for(var ct of categoryData){%>
                            <option value="<%= ct.id%>"><%= ct.category_name%></option>
                        <%}%>
                    </select>
                </div>
                </div>
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-4 col-form-label">Select Sub_Category</label>
                  <div class="col-sm-8">
                    <select name="extra_sub_category_name" id="SubCatId" class="form-control">
                        <option value="">Please select Sub_Category</option>
                        <% for(var sc of sub_categoryData){%>
                            <option value="<%= sc.id%>"><%= sc.sub_category_name%></option>
                        <%}%>
                    </select>
                </div>
                </div>
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-4 col-form-label">Enter Extra_Category</label>
                  <div class="col-sm-8">
                    <input type="text" name="extra_category_name" placeholder="Enter Extra Category" class="form-control">
                  </div>
                </div>
                <div class="row mb-3">
                  <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Add Extra Category</button>
                  </div>
                </div>
              </form>
            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->
<%- include("footer")%>